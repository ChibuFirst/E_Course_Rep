<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageCredit">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select Purchase method"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:id="@+id/purchasemethod"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/activity_vertical_margin"
        app:cardElevation="@dimen/activity_vertical_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_credit_card"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/imageViewnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_lock"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via card"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="25sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/paystack"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--Secure payment method from the comfort of the app--"
                android:layout_centerHorizontal="true"
                android:textSize="12dp"
                android:fontFamily="serif"
                />
            </RelativeLayout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewtwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/activity_vertical_margin"
        app:cardElevation="@dimen/activity_vertical_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imageViewtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_account"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/imageViewnexttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_lock"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/titletwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via Bank Transfer"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="25sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/bank"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--Secure bank payment with instant crediting--"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:fontFamily="serif"
                    >

                </TextView>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CAC7C7"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--You can also call or message any of the numbers to get a pin sent to you--"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:id="@+id/next"
                    ></TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#CAC7C7"
                    />
            </RelativeLayout>

            <GridLayout
                android:layout_below="@+id/text_home"
                android:id="@+id/mainGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_weight="6"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:paddingTop="15dp"
                android:rowCount="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name1"
                    android:text="Excel">
                </TextView>
                <TextView

                    android:layout_below="@id/name1"
                    android:layout_marginTop="5dp"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:id="@+id/number1"
                    android:background="@drawable/input_bg_rounded_corners"
                    />

                <TextView
                    android:layout_below="@id/name1"
                    android:layout_toRightOf="@id/number1"
                    android:layout_marginTop="5dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:id="@+id/message2"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="5dp"
                    android:paddingRight="20dp"
                    android:drawableStart="@drawable/ic_message"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/input_bg_rounded_corners"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name2"
                    android:text="Ifeanyi">
                </TextView>
                <TextView
                    android:layout_below="@id/name2"
                    android:layout_marginTop="5dp"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/number2"
                    android:background="@drawable/input_bg_rounded_corners"
                    />

                <TextView
                    android:layout_below="@id/name2"
                    android:layout_toRightOf="@id/number2"
                    android:layout_marginTop="5dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:id="@+id/message3"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="5dp"
                    android:paddingRight="20dp"
                    android:drawableStart="@drawable/ic_message"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/input_bg_rounded_corners"
                    android:layout_marginLeft="10dp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name3"
                    android:text="Chibuzor">
                </TextView>
                <TextView
                    android:layout_below="@id/name3"
                    android:layout_marginTop="5dp"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/number3"
                    android:background="@drawable/input_bg_rounded_corners"
                    />

                <TextView
                    android:layout_below="@id/name3"
                    android:layout_toRightOf="@id/number3"
                    android:layout_marginTop="5dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="08089550290"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="5dp"
                    android:paddingRight="20dp"
                    android:drawableStart="@drawable/ic_message"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/message4"
                    android:background="@drawable/input_bg_rounded_corners"
                    android:layout_marginLeft="10dp" />


            </RelativeLayout>
            </GridLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>