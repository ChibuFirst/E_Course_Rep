<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Privacypolicy">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewtwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="@dimen/activity_vertical_margin"
        android:layout_marginTop="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Privacy Policy"
                android:background="@color/colorGreen"
                android:id="@+id/headertext"/>
            <TextView
                android:padding="10dp"
                android:layout_below="@id/headertext"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="By using the App, you agree to the Terms-Conditions, Cookies-Policy and Privacy-Policy and consent to having your personal data, behavior transferred and processed outside the States."/>

            <TextView
                android:id="@+id/acceptbutton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="OK"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/colorGreen"
                android:layout_below="@id/headertext"
                android:layout_marginTop="120dp"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>