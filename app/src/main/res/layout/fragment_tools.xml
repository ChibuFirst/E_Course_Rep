<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_bg_rounded_corners" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Delet Number?  "
        android:layout_centerHorizontal="true"
        android:id="@+id/deletbtn"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_bg_rounded_corners"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="100dp"
        android:layout_below="@+id/deletbtn"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:id="@+id/edit_text_password4"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true">
    <EditText
        android:layout_marginLeft="25dp"
        android:layout_marginRight="28dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="phone"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg_rounded_corners"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:hint="Enter New Number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_text_password4"
        android:layout_marginTop="20dp"
        android:id="@+id/loader"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Save new Number  "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loader"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_rounded_corners"
        />


</RelativeLayout>