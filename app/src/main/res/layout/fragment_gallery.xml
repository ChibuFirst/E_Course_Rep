<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/snacking"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
       android:id="@+id/notifiRecylerView"
        android:scrollbars="vertical"
        android:background="#D6D4D4"
        ></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout

        android:id="@+id/notificationContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="#93EE93"
                    android:layout_marginTop="70dp"
                    android:id="@+id/firstcircle"
                    android:layout_centerHorizontal="true"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="#3EAA59"
                android:layout_marginTop="95dp"
                android:layout_centerHorizontal="true"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_notifications_white"
                    android:layout_marginTop="115dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Notifications"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_below="@id/firstcircle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There are no new notifications.\n You would be notified once there is\n \nThis may also be affected by your internet connection."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_below="@id/firstcircle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn more?"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp"
                    android:layout_below="@id/feedback"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    />
                <Button
                    android:id="@+id/feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="170dp"
                    android:layout_below="@id/firstcircle"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>